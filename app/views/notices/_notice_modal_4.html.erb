<!-- Modal -->
<div id="myModal<%=n.id%>" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="myModalLabel"><%= n.note %></h3>
  </div>
  <div class="modal-body">
    <p>提醒时间：   <%= n.updated_at.to_formatted_s(:db) %></p>
		<p>客户全称：   <%= Cust.find(n.cust_id).fullname %></p>
		<p>内容： 		 客户将于 <strong><%= I18n.localize(Loaninterestplan.find(n.loaninterestplan_id).plan_date, :format => :short) %></strong> 还息 <strong><%= Loaninterestplan.find(n.loaninterestplan_id).interest %></strong> 元</p>
		<p>提醒人：  	 <%= User.find(n.user_id).name %></p>
  </div>
	<%= form_for n do |f| %>
	<div><%= f.hidden_field :status, value: get_dict('noteStatus', 3).id %></div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">取消</button>
		<%= f.submit "隐藏", :class => 'btn btn-primary' %>
  </div>
	<% end %>
</div>