<div class="well">
	<dl class="dl-horizontal">
		<p class="lead text-center"><legend><strong>公司经营状况</strong></legend></p>
		<fieldset>
			<p class="lead"><legend><strong>管理及经营</strong></legend></p>
				<div class="row-fluid">
					<div class="span6">
						<% if @loanreport.first_charge_man? %>
						  <dt>实际控制人（1）:</dt>
						  <dd><%= @loanreport.first_charge_man %></dd>
						<% end %>
					</div>
					<div class="span6">
						<% if @loanreport.first_charge_man_changed? %>
						  <dt>变化状况:</dt>
						  <dd><%= @loanreport.first_charge_man_changed? ? '是' : '否' %></dd>
						<% end %>
					</div>
				</div>
				<div class="row-fluid">
					<div class="span6">
						<% if @loanreport.second_charge_man? %>
						  <dt>实际控制人（2）:</dt>
						  <dd><%= @loanreport.second_charge_man %></dd>
						<% end %>
					</div>
					<div class="span6">
						<% if @loanreport.second_charge_man_changed? %>
						  <dt>变化状况:</dt>
						  <dd><%= @loanreport.second_charge_man_changed? ? '是' : '否' %></dd>
						<% end %>
					</div>
				</div>
				<div class="row-fluid">
					<div class="span6">
						<% if @loanreport.financial_charge_man? %>
						  <dt>财务负责人:</dt>
						  <dd><%= @loanreport.financial_charge_man %></dd>
						<% end %>
					</div>
					<div class="span6">
						<% if @loanreport.financail_charge_man_changed? %>
						  <dt>变化状况:</dt>
						  <dd><%= @loanreport.financail_charge_man_changed? ? '是' : '否' %></dd>
						<% end %>
					</div>
				</div>
				<div class="row-fluid">
					<div class="span12">
						<% if @loanreport.sales_team_number? %>
						  <dt>销售团队规模:</dt>
						  <dd><%= @loanreport.sales_team_number %></dd>
						<% end %>
					</div>
				</div>
		</fieldset>
		<fieldset>
			<p class="lead"><legend><strong>公司主要客户</strong></legend></p>
				<div class="row-fluid">
					<div class="span12">
						<% if @loanreport.clients_detail? %>
						  <dt>本年度公司上下游客户变化情况:</dt>
						  <dd><%= @loanreport.clients_detail %></dd>
						<% end %>
					</div>
				</div>
				<p class="text-center"><h4>客户列表</h4></p>
				<% @loanreport.loanreportcustomers.each_with_index do |g,index| %>
				#<%= index + 1 %>
					<fieldset>
						<div class="row-fluid">
							<div class="span12">
								<% if !g.cust_type.nil? %>
									<dt>客户类型:</dt>
								  <dd><%= get_dict_by_id(g.cust_type).name %></dd>
								<% end %>
							</div>
						</div>
						<div class="row-fluid">
							<div class="span12">
								<% if !g.cust_region.nil? %>
									<dt>所在地域:</dt>
								  <dd><%= get_dict_by_id(g.cust_region).name %></dd>
								<% end %>
							</div>
						</div>
						<div class="row-fluid">
							<div class="span6">
								<% if !g.company_name.nil? %>
									<dt>公司名称:</dt>
								  <dd><%= g.company_name %></dd>
								<% end %>
							</div>
							<div class="span6">
								<% if !g.boss.nil? %>
									<dt>负责人:</dt>
								  <dd><%= g.boss %></dd>
								<% end %>
							</div>
						</div>
						<div class="row-fluid">
							<div class="span6">
								<% if !g.contact.nil? %>
									<dt>联系方式:</dt>
								  <dd><%= g.contact %></dd>
								<% end %>
							</div>
							<div class="span6">
								<% if !g.address.nil? %>
									<dt>经营地址:</dt>
								  <dd><%= g.address %></dd>
								<% end %>
							</div>
						</div>
						<div class="row-fluid">
							<div class="span12">
								<% if !g.financial.nil? %>
									<dt>财务负责人:</dt>
								  <dd><%= g.financial %></dd>
								<% end %>
							</div>
						</div>
					</fieldset>
				<% end %>
			<br/>
		</fieldset>
		
		<fieldset>
			<p class="lead"><legend><strong>公司财务状况</strong></legend></p>
			<p><strong>1） 资产负债结构</strong></p>
			<div class="row-fluid">
				<div class="span6">
					<% if @loanreport.estate_1? %>
					  <dt>房产1:</dt>
					  <dd><%= @loanreport.estate_1 %></dd>
					<% end %>
				</div>
				<div class="span6">
					<% if @loanreport.estate_2? %>
					  <dt>房产2:</dt>
					  <dd><%= @loanreport.estate_2 %></dd>
					<% end %>
				</div>
			</div>
			<div class="row-fluid">
				<div class="span6">
					<% if @loanreport.automobile? %>
					  <dt>汽车:</dt>
					  <dd><%= @loanreport.automobile %></dd>
					<% end %>
				</div>
				<div class="span6">
					<% if @loanreport.assets? %>
					  <dt>存款或理财产品:</dt>
					  <dd><%= @loanreport.assets %></dd>
					<% end %>
				</div>
			</div>
			<fieldset>
			<p class="text-center"><h4>负债情况</h4></p>
				<% @loanreport.loanreportbanks.each_with_index do |g,index| %>
				#<%= index + 1 %>
					<fieldset>
						<div class="row-fluid">
							<div class="span6">
								<% if !g.bank.nil? %>
									<dt>借款银行:</dt>
								  <dd><%= get_dict_by_id(g.bank).name %></dd>
								<% end %>
							</div>
							<div class="span6">
								<% if !g.loan_amount.nil? %>
									<dt>借款金额（万）:</dt>
								  <dd><%= g.loan_amount %></dd>
								<% end %>
							</div>
						</div>
						<div class="row-fluid">
							<div class="span6">
								<% if !g.trust_type.nil? %>
									<dt>授信种类:</dt>
								  <dd><%= get_dict_by_id(g.trust_type).name %></dd>
								<% end %>
							</div>
							<div class="span6">
								<% if !g.guarantee_type.nil? %>
									<dt>担保方式:</dt>
								  <dd><%= get_dict_by_id(g.guarantee_type).name %></dd>
								<% end %>
							</div>
					</fieldset>
				<% end %>
			</fieldset>
			
			<p><strong>2） 现金流状况</strong> （现金流周期：贷款之日起--至今）</p>
			<div class="row-fluid">
				<div class="span6">
					<% if @loanreport.loan_bank_cash_stream? %>
					  <dt>存款银行现金流:</dt>
					  <dd><%= @loanreport.loan_bank_cash_stream %></dd>
					<% end %>
				</div>
				<div class="span6">
					<% if @loanreport.other_bank_cash_stream? %>
					  <dt>非存款银行现金流:</dt>
					  <dd><%= @loanreport.other_bank_cash_stream %></dd>
					<% end %>
				</div>
			</div>
			<p><strong>3） 盈利能力</strong></p>
			<div class="row-fluid">
				<div class="span4">
					<% if @loanreport.turnover_1? %>
					  <dt>淡季营业额:</dt>
					  <dd><%= @loanreport.turnover_1 %></dd>
					<% end %>
				</div>
				<div class="span4">
					<% if @loanreport.turnover_2? %>
					  <dt>旺季营业额:</dt>
					  <dd><%= @loanreport.turnover_2 %></dd>
					<% end %>
				</div>
				<div class="span4">
					<% if @loanreport.turnover_3? %>
					  <dt>年度营业额:</dt>
					  <dd><%= @loanreport.turnover_3 %></dd>
					<% end %>
				</div>
			</div>
			<div class="row-fluid">
				<div class="span4">
					<% if @loanreport.gross_profit_1? %>
					  <dt>淡季毛利润:</dt>
					  <dd><%= @loanreport.gross_profit_1 %></dd>
					<% end %>
				</div>
				<div class="span4">
					<% if @loanreport.gross_profit_2? %>
					  <dt>旺季毛利润:</dt>
					  <dd><%= @loanreport.gross_profit_2 %></dd>
					<% end %>
				</div>
				<div class="span4">
					<% if @loanreport.gross_profit_3? %>
					  <dt>年度毛利润:</dt>
					  <dd><%= @loanreport.gross_profit_3 %></dd>
					<% end %>
				</div>
			</div>
			<div class="row-fluid">
				<div class="span4">
					<% if @loanreport.cost_1? %>
					  <dt>淡季费用:</dt>
					  <dd><%= @loanreport.cost_1 %></dd>
					<% end %>
				</div>
				<div class="span4">
					<% if @loanreport.cost_2? %>
					  <dt>旺季费用:</dt>
					  <dd><%= @loanreport.cost_2 %></dd>
					<% end %>
				</div>
				<div class="span4">
					<% if @loanreport.cost_3? %>
					  <dt>年度费用:</dt>
					  <dd><%= @loanreport.cost_3 %></dd>
					<% end %>
				</div>
			</div>
			<div class="row-fluid">
				<div class="span4">
					<% if @loanreport.pure_profit_1? %>
					  <dt>淡季净利润:</dt>
					  <dd><%= @loanreport.pure_profit_1 %></dd>
					<% end %>
				</div>
				<div class="span4">
					<% if @loanreport.pure_profit_2? %>
					  <dt>旺季净利润:</dt>
					  <dd><%= @loanreport.pure_profit_2 %></dd>
					<% end %>
				</div>
				<div class="span4">
					<% if @loanreport.pure_profit_3? %>
					  <dt>年度净利润:</dt>
					  <dd><%= @loanreport.pure_profit_3 %></dd>
					<% end %>
				</div>
			</div>
			<div class="row-fluid">
				<div class="span12">
					<% if @loanreport.bussiness_period? %>
					  <dt>行业淡旺季周期:</dt>
					  <dd><%= @loanreport.bussiness_period %></dd>
					<% end %>
				</div>
			</div>
			<div class="row-fluid">
				<div class="span12">
					<% if @loanreport.period_gap? %>
					  <dt>淡旺季销售差距:</dt>
					  <dd><%= @loanreport.period_gap %></dd>
					<% end %>
				</div>
			</div>
		</fieldset>
	</dl>
</div>
