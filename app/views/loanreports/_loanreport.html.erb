<table class="table table-hover">
  <thead>
    <tr>
      <th>姓名</th>
			<th>企业名称</th>
			<th>借款金额</th>
      <th>借款银行</th>
			<th>担保方式</th>
			<th>授信期限</th>
    </tr>
  </thead>
  <tbody>
		<tr>
			<td><%= @loan_report.cust_name %></td>
			<td><%= @loan_report.company_name %></td>
			<td><%= @loan_report.loan_amont %> 万</td>
			<td><%= get_dict_by_id(@loan_report.bank).name if !@loan_report.bank.nil? %></td>
			<td><%= get_dict_by_id(@loan_report.loan_type).name if !@loan_report.loan_type.nil? %></td>
			<td><%= @loan_report.credit_deadline %></td>
		</tr>
		<tr>
			<td colspan="6">
				<p class="text-center"><%= link_to '详细信息', loanreport_path(@loan_report), :class => 'btn btn-primary' %></p>
			</td>
		</tr>
	</tbody>
</table>