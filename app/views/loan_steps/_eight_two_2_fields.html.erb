<%= f.input :current_step, as: :hidden, input_html: { value: 8 } %>

<%= f.simple_fields_for :loanstepeights do |p| %>
	<%= p.input :cust_id, as: :hidden, input_html: { value: @cust.id } %>
	<%= p.input :repayment_date, as: :date_picker, :label => '预约还款日期' %>
	<%= p.input :available_repayment_date, as: :date_picker, :label => '可还款日期' %>
	<%= p.input :revoke_date, as: :date_picker, :label => '撤销抵押日期' %>
	<%= p.input :revoke_complete_date, as: :date_picker, :label => '撤销完成日期' %>
	
	<%= p.input :guaranty_date, as: :date_picker, :label => '做抵押日期' %>
	<%= p.input :other_complete_date, as: :date_picker, :label => '出新他证日期' %>
<% end %>