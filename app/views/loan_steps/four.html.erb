<div class="page-header">
  <h1>步骤4. 贷前调查报告</h1>
</div>
<div class="row-fluid">
	<div class="span9">
		<%= simple_form_for @custloan,:url => wizard_path, :method => :put, :html => { :class => 'form-horizontal' } do |f| %>
				<% if Loanstepfour.find_by_custloan_id(@custloan.id).nil? %>
					<%= render 'four_new_fields', :f => f %>
				<% else %>
					<%= render 'four_fields', :f => f %>
				<% end %>
			<div class="form-actions">
				<%= link_to '上一步', previous_wizard_path, :class => 'btn' %>
				<%= f.submit '下一步', :class => 'btn btn-primary' %>
			</div>
		<% end %>
	</div>
</div>