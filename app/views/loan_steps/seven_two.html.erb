<div class="row-fluid">
	<div class="span9">
		<div class="well">
			<p class="lead text-center"><legend><strong>开户</strong></legend></p>
				<%= simple_form_for @custloan,:url => wizard_path, :method => :put, :html => { :class => 'form-horizontal' } do |f| %>
						<% if steptypeseven(@custloan.loanstepsevens.first.id) == 1 %>
							<%= render 'seven_two_1_fields', :f => f %>
						<% end %>
						<% if steptypeseven(@custloan.loanstepsevens.first.id) == 2 %>
							<%= render 'seven_two_2_fields', :f => f %>
						<% end %>
						<% if steptypeseven(@custloan.loanstepsevens.first.id) == 3 %>
							<%= render 'seven_two_3_fields', :f => f %>
						<% end %>
					<div class="form-actions">
						<%= link_to '上一步', previous_wizard_path, :class => 'btn' %>
						<%= f.submit '下一步', :class => 'btn btn-primary' %>
					</div>
				<% end %>
		</div>
	</div>
	<div class="span3">
		<%= render 'loan_steps/helps/seven_helps' %>
	</div>
</div>