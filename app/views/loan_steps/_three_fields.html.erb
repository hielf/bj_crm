<%= f.input :current_step, as: :hidden, input_html: { value: 3 } %>

<%= f.simple_fields_for :loanstepthrees do |p| %>
	<%= p.input :cust_id, as: :hidden, value: @cust %>
	<%= p.input :visit_time, :as => :date_picker, :label => '上门时间' %>
	<%= p.input :visit_place, :input_html => { :class => "span6" }, :label => '上门地点' %>
	<%= p.input :company_id, :collection => User.all, :label => '陪同人员' %>
	<%= p.input :bank_emp, :label => '银行人员' %>
	<%= p.input :end_time, :label => '结束时间' %>
	<%= p.input :subject, as: :text, :input_html => { :class => "span4" }, :label => '主要谈话内容' %>
<% end %>