<div class="page-header">
	<% if steptype(@custloan.loanstepsixths.first.id) == 1 %>
		<h1>步骤6. 签借款合同</h1>
	<% else %>
		<h1>步骤6. 签咨询合同</h1>
	<% end %>
</div>
<div class="row-fluid">
	<div class="span9">
		<%= simple_form_for @custloan,:url => wizard_path, :method => :put, :html => { :class => 'form-horizontal' } do |f| %>
		  <fieldset>
				<% if steptype(@custloan.loanstepsixths.first.id) == 1 %>
					<%= render 'six_two_1_fields', :f => f %>
				<% end %>
				<% if steptype(@custloan.loanstepsixths.first.id) == 2 %>
					<%= render 'six_two_2_fields', :f => f %>
				<% end %>
			</fieldset>
			<div class="form-actions">
				<%= link_to '上一步', previous_wizard_path, :class => 'btn' %>
				<%= f.submit '下一步', :class => 'btn btn-primary' %>
			</div>
		<% end %>
	</div>
	<div class="span3">
		<%= render 'loan_steps/helps/six_helps' %>
	</div>
</div>