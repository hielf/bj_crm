<%= f.input :current_step, as: :hidden, input_html: { value: 7 } %>

<%= f.simple_fields_for :loanstepsevens do |p| %>
	<%= p.input :cust_id, as: :hidden, input_html: { value: @cust.id } %>
	<%= p.input :account_name, :label => '公司名称' %>
	<%= p.input :bank, :collection => get_dict_by_type('custBank'), :label => '开户行' %>
	<%= p.input :account_code, :label => '账户号' %>
	<%= p.input :open_date, as: :date_picker, :label => '完成开户日期' %>
	
	<%= p.input :attachment_file2, as: :file, :label => '营业执照', :hint => 
	 if !@custloan.loanstepsevens.first.attachment_file2.to_s.blank? 
			link_to @custloan.loanstepsevens.first[:attachment_file2], 
							@custloan.loanstepsevens.first.attachment_file2.url 
	 end %>
