<div class="tabbable tabs">
  <ul class="nav nav-tabs">
    <li class="active"><a href="#1" data-toggle="tab"><%= @user.name %></a></li>
    <li><a href="#2" data-toggle="tab">下级用户</a></li>
  </ul>
  <div class="tab-content">
    <div class="tab-pane active" id="1">
			<div class="span6">
				<table class="table table-bordered">
				  <tbody>
						<tr><td>用户代码： <%= @user.usercode %></td></tr>
						<tr><td>用户类型： <%= get_dict_by_id(@user.usertype).name %></td></tr>
				  </tbody>
				</table>
			</div>
    </div>
    <div class="tab-pane" id="2">
			<%= simple_form_for @user, :html => { :class => 'form-horizontal' } do |f| %>
				<%= render 'usrrel', :f => f %>
			<div class="form-actions">
				<%= f.submit "确认", :class => 'btn btn-primary' %>
			</div>
			<% end %>
    </div>
  </div>
</div>

