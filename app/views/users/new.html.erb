<%= simple_form_for @user, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="well">
	<p class="lead text-center"><legend><strong>新用户注册</strong></legend></p>
	<% if user_type(current_user) == 3 %>
		<%= render 'admin_fields', :f => f %>
	<% else %>
		<%= render 'fields', :f => f %>
	<% end %>
	<div class="form-actions">
		<%= f.submit "注册", :class => 'btn btn-primary' %>
		<%= link_to '取消', root_path, :class => 'btn' %>
	</div>
  </div>
<% end %>