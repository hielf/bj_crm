<div class="row-fluid">
	<div class="span9">
		<div class="well">
			<p class="lead text-center"><legend><strong>还款计划表</strong></legend></p>
			<%= simple_form_for @custloan, :html => { :class => 'form-horizontal' } do |f| %>
					<%= render 'paymentplan_fields', :f => f %>
			<% if @custloan.serv_user_id == current_user.id %>
				<div class="form-actions">
					<%= f.submit '确认', :class => 'btn btn-primary' %>
					<%= link_to '取消', custloan_path(@custloan), :class => 'btn' %>
				</div>
			<% end %>
			<% end %>
		</div>
	</div>
	<div class="span3">
		<%= render 'custloans/helps/paymentplan_help' %>
	</div>
</div>