<div class="page-header">
  <h1>客户信贷记录</h1>
</div>
<%= simple_form_for @custloan, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
		<%= f.input :total_amount, :label => '借款金额', :required => true %>
		<%= f.input :begin_date, as: :date, :label => '借款提款日', :required => false %>
	<div class="form-actions">
		<%= f.submit "确认", :class => 'btn btn-primary' %>
		<%= link_to '取消', root_path, :class => 'btn' %>
	</div>
  </fieldset>
<% end %>