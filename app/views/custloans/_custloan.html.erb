<table class="table table-hover">
  <thead>
    <tr>
      <th>申请进度</th>
			<th>当前状态</th>
			<th>贷款金额</th>
      <th>起始日期</th>
			<th>还款日期</th>
    </tr>
  </thead>
  <tbody>
		<tr>
			<td><%= @cust_loan.current_step %></td>
			<td><%= get_dict_by_id(@cust_loan.status).name %></td>
			<td><%= @cust_loan.total_amount %></td>
			<td><%= @cust_loan.begin_date.to_s.to_date %></td>
			<td><%= @cust_loan.end_date.to_s.to_date %></td>
		</tr>
		<tr>
			<td colspan="5">
				<p class="text-center"><%= link_to '详细信息', custloan_path(@cust_loan), :class => 'btn btn-primary' %></p>
			</td>
		</tr>
	</tbody>
</table>