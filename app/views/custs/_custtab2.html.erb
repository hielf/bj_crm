<% if @custloans.any? %>
<div class="accordion" id="accordion3">
	<% @custloans.each do |t| %>
		<div class="accordion-group">
			<div class="accordion-heading">
				<a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion3" href="#collapse<%=t.id%>">
					贷款记录 #<%= t.loanstepfours.first.request_date.to_s.to_date if !t.loanstepfours.first.nil? %>
				</a>
			</div>
			<div id="collapse<%=t.id%>" class="collapse in" <% if @custloans.first.id == t.id %>style="height: auto;"<% else %>style="height: 0px;"<% end %>>
				<div class="accordion-inner">
					<%= render :partial => 'custloans/custloan', :locals => { :object => cust_loan(t.id) } %>
				</div>
			</div>
		</div>
	<% end %>
</div>
<% else %>
<p class="text-center muted">该客户尚未办理过贷款业务</p>
<% end %>